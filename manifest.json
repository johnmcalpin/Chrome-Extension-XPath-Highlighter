{
  "manifest_version": 3,
  "name": "XPath Highlighter",
  "version": "1.0.0",
  "description": "Instantly generate and validate XPath expressions by clicking any element on a webpage with a convenient side panelfunctionality.",
  
  "author": "John McAlpin",
  "homepage_url": "https://www.johnmcalpin.com",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  
  "action": {
    "default_title": "Open XPath Highlighter"
  }
}
